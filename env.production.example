# Production Environment Variables Example
# Bu dosyayı .env.production olarak kopyalayın ve değerleri doldurun
# cp env.production.example .env.production

# Site Configuration
SITE_NAME=alpdinamik
SITE_PORT=3001

# Database Configuration
DB_USER=alpdinamik_user
DB_PASSWORD=CHANGE_THIS_PASSWORD
DB_NAME=alpdinamik_db
DB_PORT=5432

# Database URL (Docker internal)
DATABASE_URL=postgresql://alpdinamik_user:CHANGE_THIS_PASSWORD@alpdinamik-postgres:5432/alpdinamik_db?schema=public&connection_limit=20&pool_timeout=20

# NextAuth Configuration
NEXTAUTH_SECRET=CHANGE_THIS_SECRET
NEXTAUTH_URL=http://YOUR_SERVER_IP:3001

# Next.js Configuration
NEXT_PUBLIC_API_URL=http://YOUR_SERVER_IP:3001
NODE_ENV=production

# Application Port
APP_PORT=3000

